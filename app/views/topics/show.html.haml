.container
  .row
    .col-md-12.text-center
      %h2
        = @topic.title
      %br
      %br
      = @topic.initial_post
      %br
      %br
      = link_to "Edit", edit_topic_path(@topic, @post)
      |
      = link_to "Delete", topic_path(@topic), method: :delete
      |
      = link_to "Home", root_path
%br
.container-fluid.text-center
  .row      
    = link_to "Join the Conversation! Add a Post", new_topic_post_path(@topic)
    %br
    - @posts.each do |post|
      .col-md-12.text-center
        %br
        .list-group-item.text-left
          %strong 
            = link_to post.title, topic_post_path(@topic, post)
          %br
          = post.content
          %br
          = post.created_at.strftime("posted at %I:%M%p")
          %br
          = link_to "Edit", edit_topic_post_path(@topic, post)
          |
          = link_to "Delete", topic_post_path(@topic, post), method: :delete
          |
          = link_to "Add Comment", topic_post_path(@topic, post)
          %br

